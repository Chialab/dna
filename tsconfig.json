{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "lib": ["es2017", "dom"],
    "declaration": false,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [],
  "typedocOptions": {
    "name": "DNA",
    "includeDeclarations": true,
    "ignoreCompilerErrors": true,
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "mode": "file",
    "out": "docs",
    "exclude": "node_modules/**/*.d.ts"
  }
}
