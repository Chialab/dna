{
  "name": "@chialab/dna",
  "version": "3.0.0-beta.1",
  "description": "Progressive Web Components",
  "main": "dist/cjs/dna.js",
  "module": "dist/esm/dna.js",
  "browser": "dist/umd/dna.js",
  "license": "MIT",
  "lib": "src/dna.ts",
  "types": "./dist/dna.d.ts",
  "directories": {
    "src": "src",
    "lib": "dist",
    "test": "test",
    "dist": "dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chialab/dna"
  },
  "bugs": {
    "url": "https://github.com/chialab/dna/issues"
  },
  "homepage": "https://www.chialab.io/p/dna",
  "author": "Chialab <dev@chialab.io> (https://www.chialab.it)",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "npm run build:browser && npm run build:node && npm run build:compat",
    "build:browser": "rna build --production --name DNA --typings --bundle",
    "build:node": "rna build src/adapters/node/dna.ts --output 'dist/adapters/node/dna.js' --name DNA --format cjs --targets 'node >= 10'",
    "build:compat": "rna build src/adapters/compat/dna.ts --output 'dist/adapters/compat/dna.js' --name DNA --format esm",
    "test": "rna unit 'test/*.spec.js' --coverage",
    "test:browser": "rna unit 'test/*.spec.js' --coverage --browser",
    "test:saucelabs": "rna unit 'test/*.spec.js' --coverage --saucelabs --concurrency 2",
    "test:node": "rna unit 'test/*.spec.js' --coverage --node",
    "test:compat": "rna unit 'test/compat/*.spec.js' --browser",
    "prepack": "npm run build"
  },
  "dependencies": {},
  "optionalDependencies": {
    "jsdom": "^16.0.0"
  },
  "devDependencies": {
    "@types/jsdom": "^12.2.3",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.18.0",
    "babel-eslint": "^10.0.3",
    "core-js": "^3.6.4",
    "eslint": "^6.8.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-mocha-no-only": "^1.1.0",
    "htm": "^3.0.3",
    "typescript": "^3.7.5"
  }
}
