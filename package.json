{
  "name": "@chialab/dna",
  "version": "4.0.0",
  "description": "Progressive Web Components",
  "main": "dist/cjs/dna.js",
  "module": "dist/esm/dna.js",
  "types": "types/index.d.ts",
  "browser": {
    "jsdom": false
  },
  "exports": {
    ".": {
      "require": "./dist/cjs/dna.js",
      "node": "./dist/node/dna.js",
      "browser": "./dist/browser/dna.js",
      "default": "./dist/esm/dna.js"
    },
    "./jsx-runtime": "./jsx-runtime.js"
  },
  "files": [
    "dist",
    "types",
    "jsx-runtime.js",
    "LICENSE",
    "README.md"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chialab/dna"
  },
  "bugs": {
    "url": "https://github.com/chialab/dna/issues"
  },
  "homepage": "https://www.chialab.io/p/dna",
  "author": "Chialab <dev@chialab.io> (https://www.chialab.it)",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "rimraf dist && npm run types && npm run build:esm && npm run build:browser && npm run build:node && npm run build:cjs",
    "build:esm": "rimraf dist/esm && rna build src/index.ts --output dist/esm/dna.js --format esm --minify --platform neutral",
    "build:browser": "rimraf dist/browser && rna build src/index.ts --output dist/browser/dna.js --format esm --minify --platform browser",
    "build:node": "rimraf dist/node && rna build src/index.ts --output dist/node/dna.js --format esm --minify --platform node",
    "build:cjs": "rimraf dist/cjs && rna build src/index.ts --output dist/cjs/dna.js --format cjs --minify --platform node",
    "types": "rimraf types && tsc --declaration --emitDeclarationOnly --declarationDir 'types'",
    "test": "npm run test:browser && npm run test:node",
    "test:browser": "rna test 'test/*.spec.js' --coverage",
    "test:saucelabs": "rna test 'test/*.spec.js' --coverage --saucelabs",
    "test:node": "rna test 'test/*.spec.js' --coverage --node",
    "docs": "rna documentate --output docs/API.md --header '# API Reference'",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@chialab/eslint-config": "^2.0.0",
    "@chialab/rna": "^0.5.7",
    "@open-wc/testing": "^2.5.33",
    "@types/jsdom": "^12.2.3",
    "@web/test-runner-saucelabs": "^0.5.0",
    "core-js": "^3.6.4",
    "eslint": "^7.26.0",
    "htm": "^3.0.3",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "typescript": "^4.0.0"
  },
  "peerDependencies": {
    "jsdom": "^16.0.0"
  }
}
